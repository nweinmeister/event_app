<h1>Events</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Details</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.details %></td>
        <td><%= event.location %></td>
        <td><%= link_to 'RSVP', new_rsvp_path(event.id), class: 'btn btn-success' %></td>
        <td><%= link_to 'See RSVPs', rsvps_path(event.id), class: 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_event_path(event.id), class: 'btn btn-warning' %></td>
        <td>Delete</td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Event', new_event_path %>